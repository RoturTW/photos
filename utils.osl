def enrichImagesWithSharing(string username, array images) array (
    object sharesObj = readUserShares(username)
    array shares = sharesObj.shares
    for i images.len (
        object img = images[i]
        for j shares.len (
            object share = shares[j]
            if share.imageId.toStr() == img.id.toStr() (
                img["sharedWith"] = share.sharedWith
                img["isPublic"] = share.isPublic
            )
        )
    )
    return images
)

