    object albums = readUserAlbums(username)
    array list = albums.albums
    array out = []
    for i list.len (
        string it = list[i].toStr()
        if it.toLower() != name.toLower() (
            out.append(it)
        )
    )
    albums.albums = out
    albums.items.delete(name)
    writeUserAlbums(username, albums)
    return albums
)

